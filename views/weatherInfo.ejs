<%- include('header'); -%>
<div class="box-1">
  <a class="listButton" href="/"><p>To Do List</p></a>

  <a class="weatherButton" href="/weather"><p>Weather</p></a>
</div>
<div class="flex justify-center box bg-purple-300">
  <h1 class="text-xl text-white bg-purple-300">Weather Information</h1>
</div>
<div class="flex justify-center mt-6">
  <h3 class="text-lg font-semibold">
    Type the city name that you want know about its weather.
  </h3>
</div>
<div class="flex justify-center mt-10 box">
  <form action="/weather" method="post">
    <label for="cityInput">City Name: </label>
    <input
      class="rounded-full bg-purple-300 hover:rounded-lg w-max border-2 border-indigo-600"
      id="cityInput"
      type="text"
      name="cityName"
    />
    <button
      type="submit"
      class="rounded-full bg-purple-300 hover:rounded-lg w-16"
    >
      Go
    </button>
  </form>
</div>
<div class="weatherBox">
  <div>
    <h1>The weather in <%= query %> is <%= temp %> degrees Celcius.</h1>
  </div>
  <div>
    <p>The weather in <%= query %> is <%= weatherDescription %>.</p>
  </div>
  <div>
    <img src="<%= imageURL %>" />
  </div>
</div>
<%- include('footer'); -%>
